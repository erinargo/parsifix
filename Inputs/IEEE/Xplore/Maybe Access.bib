  keywords={},
  doi={10.1109/59.260896},
  ISSN={1558-0679},
  month={Aug},}@INPROCEEDINGS{8326323,
  author={Park, Hyunho and Kwon, Eunjung and Jung, Eui-Suk and Lee, Hyun-Woo and Lee, Yong-Tae},
