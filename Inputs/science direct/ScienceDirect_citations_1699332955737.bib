author = {Ronald A. Heiner},
abstract = {Nonlinear dynamic theory implies optimal decisions often behave like random ‘chaos’. Such random target motion is impossible for imperfect agents to follow without error. However, they can still gradually approach the optimal target if and only if they partially adjust toward its perceived location so as to induce their behavior to converge to an equilibrium. Reducing dynamic errors through partial adjustment thereby induces a stable regularity in behavior that otherwise may never evolve. This result agrees with the stability properties observed in experimental markets (including cobweb, auction, and asset markets), whose dynamics before reaching equilibrium exhibit “adaptive” rather than ‘rational’ expectations.}
}
