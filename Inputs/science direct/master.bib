@article{ALSABBAG2022101473,
title = {Interactive defect quantification through extended reality},
journal = {Advanced Engineering Informatics},
volume = {51},
pages = {101473},
year = {2022},
issn = {1474-0346},
doi = {https://doi.org/10.1016/j.aei.2021.101473},
