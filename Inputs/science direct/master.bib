author = {Patrick Cesar Ferreira and Vanessa Neiva Ataíde and Cyro Lucas {Silva Chagas} and Lúcio Angnes and Wendell Karlos {Tomazelli Coltro} and Thiago Regis {Longo Cesar Paixão} and William {Reis de Araujo}},
